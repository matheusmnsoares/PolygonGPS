<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39204F"
    tools:context=".InfoActivity">

    <ImageView
        android:id="@+id/infoDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/info__down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/infoMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:src="@drawable/info_minus"
        app:layout_constraintBottom_toBottomOf="@+id/infoDown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/infoPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:src="@drawable/info_plus"
        app:layout_constraintBottom_toTopOf="@+id/infoMinus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/infoCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:src="@drawable/info_check"
        app:layout_constraintBottom_toTopOf="@+id/infoPlus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/infoUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/info_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/infoInfo"
        android:layout_width="224dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/main_info"
        android:transitionName="info_transition"
        app:layout_constraintEnd_toEndOf="@+id/infoUp"
        app:layout_constraintStart_toStartOf="@+id/infoUp"
        app:layout_constraintTop_toTopOf="@+id/infoButton" />

    <Button
        android:id="@+id/infoButton"
        android:layout_width="165dp"
        android:layout_height="53dp"
        android:layout_marginBottom="49dp"
        android:background="#00FFFFFF"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/infoUp"
        app:layout_constraintEnd_toEndOf="@+id/infoUp"
        app:layout_constraintStart_toStartOf="@+id/infoUp" />
</androidx.constraintlayout.widget.ConstraintLayout>